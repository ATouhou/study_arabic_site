<% provide :title, @forum_post.title %>

<div class="row">
  <div class="span1">
   <div class="arrows">

      <i class="icon-caret-up vote" data-type="up" data-post_id=<%= @forum_post.id %>></i>
      <i class="icon-caret-down vote" data-type="down" data-post_id=<%= @forum_post.id %>></i>

   </div>
  </div>

  <div class="span8">
    <h3>
      <%= @forum_post.title %><span class="vote_count">+<%= @forum_post.votes.count %></span>
    </h3>

    <div class="post_content">
      <span class="subtitle">Posted on <%= @forum_post.created_at.strftime("%b %d, %Y") %> by Shazeb Qadir</span>

      <div class="post">
        <%=  @forum_post.content %>
      </div>
    </div>
  </div>

</div>


<% content_for :side_bar do %>
  <div>
    Post Stats:<br />
    123 views<br />
    23 up votes<br /><br />
  </div>
<% end %>

