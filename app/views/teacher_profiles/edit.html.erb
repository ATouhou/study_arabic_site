<h2>Create Teacher Profile</h2>
<%= form_for(@profile) do |f| %>
  <%= f.fields_for :user do |user_form| %>
    <div class="field"><%= user_form.label :first_name %>
    <%= user_form.text_field :first_name %></div>
    <div class="field"><%= user_form.label :last_name %>
    <%= user_form.text_field :last_name %></div>
    <div class="field"><%= user_form.label :email %>
    <%= user_form.email_field :email %></div>
    <div class="field"><%= user_form.label "Skype ID" %>
    <%= user_form.email_field :skype_id %></div>
    <div class="field"><%= user_form.label :country_id %>
      <%= user_form.select :country_id, Country.all.collect { |c| [c.name, c.id] } %></div>
    <div class="field"><%= user_form.label "Enter a brief description about yourself" %>
    <%= user_form.text_area :bio %></div>
    <%= user_form.fields_for :image, :html => { :multipart => true } do |image_form| %>
      <%= image_form.label "Profile Picture" %>
      <%= image_form.file_field :image %>
    <% end %>
  <% end %>
  <div class="field">
    <%= f.label :education %>
    <%= f.text_field :education %>
  </div>
  <div class="field">
    <%= f.label :years_of_experience %>
    <%= f.text_field :years_of_experience %>
  </div>
  <div class="field">
    <%= f.label :specialties %>
    <%= f.text_field :specialties %>
  </div>
  <div class="field">
    <%= f.label :price_per_hour %>
    <%= f.text_field :price_per_hour %>
  </div>
  <div class="field">
    Do you offer online classes?
    <div class="form-inline">
      <%= f.label "Yes" %>
      <%= f.radio_button :online, true %>
      <%= f.label "No" %>
      <%= f.radio_button :online, false %>
    </div><br />
  </div>
  <div class="field">
    Do you offer in person classes?
    <div class="form-inline">
      <%= f.label "Yes" %>
      <%= f.radio_button :in_person, true %>
      <%= f.label "No" %>
      <%= f.radio_button :in_person, false %>
    </div><br />
  </div>

  <div class="actions">
    <%= f.submit "Create account" %>
  </div>
<% end %>

