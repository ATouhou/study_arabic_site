<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
<div class="container" id="header"><!--div for logo and navigation-->
    <div class="row">

      <div class="span12 logo_container">
        <div class="row margin_top">
          <div class="span9">
                <span class="site_title">StudyArabic.com</span>

          </div>
        </div>

        <div class="row">
          <div class="span8">
          <ul class="nav nav-tabs custom_nav nav_links">
            <li><%= link_to("Home", "/") %></a></li>
            <li class="<%= params[:controller] == "centers" ? "active_nav" : "not_active" %>"><%= link_to("Centers/Programs", centers_path) %></li>
            <li class="<%= params[:controller] == "teacher_profiles" ? "active_nav" : "not_active" %>"><%= link_to("Teachers", teacher_profiles_path) %></li>
            <li class="<%= params[:controller] == "resources" ? "active_nav" : "not_active" %>"><%= link_to("Resources", resources_path) %></li>
            <li class="<%= params[:controller] == "articles" ? "active_nav" : "not_active" %>"><%= link_to("Articles", articles_path) %></li>
            <li class="dropdown <%= params[:controller] == "categories" || params[:controller] == "forum_posts" ? "active_nav" : "not_active" %>">
            <a class="dropdown-toggle disabled" data-toggle="dropdown" href="<%= forum_posts_path %>">Forums
                <b class="caret custom_caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><a href="<%= category_forum_posts_path(Category.find_by_name("Arabic Language")) if Category.find_by_name("Arabic Language") %>">Arabic Language</a></li>
                <li><a href="<%= category_forum_posts_path(Category.find_by_name("Study Abroad")) if Category.find_by_name("Study Abroad") %>">Study Abroad (General)</a></li>
                <li><a href="<%= category_forum_posts_path(Category.find_by_name("Countries")) if Category.find_by_name("Study Abroad") %>">Study Abroad (By Country)</a></li>
              </ul>
            </li>
          </ul>
          </div><!--navbar-->

          <div class="span4">
              <div class="search_box_home">
              <%= form_tag("/site_search", :method => "get", class: "form-search") do %>
                  <div class="form-inline">
                    <div class="input-append input-prepend">
                      <%= select_tag(:item_type, 
                                    options_from_collection_for_select(StaticPagesController::SEARCH_OPTIONS, :last, :first), 
                                    class: "select_box btn") %>
                    <%= text_field_tag(:query, nil, id: "appendedInputButtons", type: "text", class: "span2", id: "search_input") %>
                    <button class="btn" type="submit" name="commit" id="search_button"><i class="icon-search icon"></i></button>
                    </div>
                  </div>
                </div>
              <% end %>
              </div>
          </div>

        </div><!--div for nav and search box-->
          
      </div>


    </div>
</div><!--div for logo and navigation-->

<div class="container" id="page_area">
  <div class ="row">
    <div class="span12">
     <div class="row">
        <div class="span9" id="main_content">
          <% if flash[:notice] %>
            <div class="custom_alert"><%= flash[:notice] %></div>
          <% end %>
          <% if flash[:alert] %>
            <div class="error_alert"><%= flash[:alert] %></div>
          <% end %>
          <%= yield %>
          <%= debug(params) if Rails.env.development? %> 
        </div>
        <div class="span3 sidebar">
            <% if user_signed_in? %>
              <ul class="nav nav-tabs">
                <li class="dropdown">
                <a class="dropdown-toggle disabled" data-toggle="dropdown" href="#"><%= current_user.first_name %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to("Profile", user_path(current_user)) %></li>
                    <li><%= link_to("Messages", user_messages_path(current_user)) %></li>
                    <li><%= link_to("Sign Out", destroy_user_session_path, :method => :delete) %></li>
                  </ul>
                </li>
              </ul>
            <% else %>
              <div class="margin_bottom_small user_links"><%= link_to "Sign In", new_user_session_path, class: "bold" %> or <%= link_to "Register", register_path, class: "bold" %></div>
            <% end %>
            <%= yield :side_bar %>
            <br />
            Some ads here. Other information, etc
        </div>
      </div>
    </div>
  </div>

</div>
</body>
</html>





