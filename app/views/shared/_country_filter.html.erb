<% item_count_method = "#{params[:controller]}_in_country" %>

<h4>Filter By Country</h4>
  <ul class="nav nav-pills nav-stacked">
    <li class="parent_links active options country_option" id="all"><a href="#">All Countries</a></li>
    <% @countries.each do |country| %>
      <li class="options country_option" id="<%= country.id %>"><a href="#"><%= "#{country.name} (#{country.send(item_count_method)})" %></a></li>
    <% end %>
  </ul>

