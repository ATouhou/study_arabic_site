<%= provide :title, "Arabic Teacher Directory" %>

<div class="row">
  <div class="span3">
    <p class="subtitle_large">Ratings</p>
    <label class="checkbox">
      <input type="checkbox" checked class="ratings_option" id="order_by_average_rating">
      Highest Rated
    </label>
    <label class="checkbox">
      <input type="checkbox" class="ratings_option" id="order_by_reviews">
      Most Reviews 
    </label>
  </div>

  <div class="span3">
    <p class="subtitle_large">Instruction Type</p>
    <label class="checkbox1">
      <input type="checkbox" class="instruction_option" id="in_person">
      In Person
    </label>
    <label class="checkbox">
      <input type="checkbox" class="instruction_option" id="online">
      Online
    </label>
  </div>

  <div class="span3">
    <span class="subtitle_large">Price</span>
  </div>
</div>
<br />

<div id="profiles_list">
  <div id="profiles_div">
    <%= render partial: "profiles_list", locals: { teacher_profiles: @teacher_profiles } %>
  </div>
</div>
