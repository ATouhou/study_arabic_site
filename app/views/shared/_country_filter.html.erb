<% item_count_method = "#{params[:controller]}_in_country" %>

<h4>Filter By Country</h4>
  <ul class="nav nav-pills nav-stacked custom">
    <li class="parent_links country_option <%= li_class %> <%= params[:country_option].blank? ? "active" : '' %>" id="all"><a href="#">All Countries</a></li>
    <% @countries.each do |country| %>
      <li class="country_option <%= li_class %> <%= params[:country_option] == country.id.to_s ? "active" : '' %>" id="<%= country.id %>"><a href="#"><%= "#{country.name} (#{country.send(item_count_method)})" %></a></li>
    <% end %>
  </ul>

