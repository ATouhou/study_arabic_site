<% teacher_profiles.each do |teacher| %>
  <%= render partial: "shared/index_with_image", 
             locals: { image: teacher.user.try(:image).try(:photo).try(:url, :thumb), 
                       name: full_name(teacher.user), 
                       item: teacher.user,
                       description: teacher.user.bio,
                       item_with_reviews: teacher } %>

<% end %>
