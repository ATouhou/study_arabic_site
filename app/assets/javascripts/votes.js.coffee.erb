$(document).ready ->
  $(".vote").bind("click", ->
    $.ajax
      url: "/forum_posts/#{$(this).attr("data-post_id")}/vote"
      type: "POST"
      data:
        type: $(this).attr("data-type")
        voteable_type: "ForumPost"
      dataType: "json"
      success: (data) =>
        #change color of arrow
        $(".vote").removeClass("selected_vote")
        $(this).addClass("selected_vote")
        $(".vote_count").html("+" + data)
  )
