<% provide :title, @resource.title %>

<h3><%= @resource.title %></h3>
<div class="post_content">
  <%=  render partial: 'shared/delete_edit_links', locals: { item: @resource } %>
</div>

<div class="row">
  <div class="span3 preview_div">
    <% if @resource.resource_file.content_type == "application/msword" || @resource.resource_file.content_type == "text/plain" %>
        <div id="resource_thumbnail">
          <div style="height: 250px; background-color: #d4d4d4;"></div>
        </div>
    <% else %>
        <div id="resource_thumbnail">
          <%= link_to(image_tag(@resource.resource_file.url(:thumb)), @resource.resource_file.url(:medium)) %>
        </div>
        <div class="centered"><%= link_to("Preview", @resource.resource_file.url(:medium)) %></div>
    <% end %>
  </div>

  <div class="span6">
    <p>
      <span class="subtitle_large">Description</span><br />
      <%= @resource.description %>
    </p>
    <div class="download_link"><%= link_to "Download Resource", "/resources/#{@resource.id}/download" %></div>
  </div>
</div>

<% content_for(:side_bar) do %>
    <span class="subtitle_large">Categories</span><br />
    <% @resource.categories.each do |category| %>
        <span class="label"><%= category.name %></span><br />
    <% end %>

    <br />

    <span class="subtitle_large">Posted By</span><br />

    <div class="row">
      <div class="span1">
        <br /><i class='icon-sign-blank' style="font-size: 75px; color: #f5f5dc;"></i>
      </div>
      <div class="span1">
        <span class="gray_bold"><%= @resource.user.email.split("@")[0] %></span><br />
        <span class="general_label reputation"><i class="icon-plus"></i> 234</span>
      </div>
    </div>

    <div>
      <table>
        <tr>
          <td><span class="subtitle_large padded_cell">Views</span></td>
          <td><span class="stats"><%= @resource.views_count %></span></td>
        </tr>
        <tr>
          <td><span class="subtitle_large padded_cell">Votes</span></td>
          <td><span class="stats"><%=  @resource.votes_count %></span></td>
        </tr>
        <tr>
          <td><span class="subtitle_large padded_cell">Downloads</span></td>
          <td><span class="stats"><%=  @resource.downloads_count %></span></td>
        </tr>
      </table>

    </div>

      <!--<li>Posted by</li>-->
      <!--<li>Views</li>-->
      <!--<li>Votes</li>-->
      <!--<li>Downloads</li>-->
<% end %>






