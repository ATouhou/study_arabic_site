<% provide :title, full_name(@user) %>

<div class="row">
  <div class="span3 photo">
    <%= image_tag @user.image.try(:image).try(:url, :thumb) %> 
  </div>
  <div class="span6">
    <div class="row">
      <div class="span4">
        <div><span class="subtitle_large1"><%= full_name(@user) %></span><span class="label user_label"><%= user_type(@user) %></div>
      </div>
      <div class="span2"><p class="profile_links"><%= link_to "Edit Profile", controller: "#{user_type(@user).downcase}_profiles", 
                                                      action: "edit", id: @user.profile %></p></div>
    </div>
    
      <p class="specialties"><%= @user.profile.try(:specialties) %></p class="specialties">
    <p><%= @user.bio %></p>
  </div>
</div>
<br />
