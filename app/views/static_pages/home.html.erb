<%= provide :title, "StudyArabic.com" %>

<!--featured article-->
<div class="row">
  <div class="span9">
    <div class="subtitle_largest"><%= link_to(@feature_article.title, @feature_article) %></div>
    <%= render partial: "articles/author_line", locals: { item: @feature_article } %>
  </div>
</div>

<div class="row">
  <div class="span3">
    <%= image_tag(@feature_article.images.first.photo(:large)) %>
  </div>
  <div class="span6">
    <%= truncate_text(simple_format(@feature_article.content), 750, @feature_article) %>
  </div>
  <div class="span9 bottom_border_div"></div>
</div>

<div class="row">
  <% @articles.each do |article| %>
    <div class="span350">
      <div class="subtitle_large"><%= link_to(article.title, article) %></div>
      <%= render partial: "articles/author_line", locals: { item: article } %>
      <%= truncate_text(simple_format(article.content), 300, article) %>
    </div>
  <% end %>
</div>

