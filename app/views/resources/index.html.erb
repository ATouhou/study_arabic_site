<% provide :title, "Arabic Learning Resources" %><%= render partial: "shared/page_title", locals: { title: "Arabic Learning Resources" } %><%= render partial: "shared/search_and_new", locals: { item_type: "Resources", new_button_text: "Add a Resource" }  %><%= render partial: "shared/filter_links" %><%= anticipate_no_records(@items, "resources", resources_path) %><%= render partial: "shared/index_list" %><%= render partial: "shared/pagination_links", locals: { items: @items } %><% content_for(:side_bar) do %>  <h4><%= params[:controller].titleize.singularize %> Categories</h4>  <ul class="nav nav-pills nav-stacked">    <% li_class1 = "active" unless @category %>    <li class="<%= li_class1 %> parent_links"><%= link_to("All Categories", resources_path(order_by: @current_scope)) %></li>    <%= render :partial => 'categories/category_pills', locals: { :category_title => "Arabic Language",                                                      :parent_name => "Arabic Language" } %>  </ul><% end %>                                                      